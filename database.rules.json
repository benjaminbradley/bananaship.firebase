{
  "rules": {
    "motd": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "users": {
      "$email": {
        "useronly": {
          ".read": "$email === auth.token.email.toLowerCase().replace('.', '_')",
          ".write": "$email === auth.token.email.toLowerCase().replace('.', '_')"
        }
      }
    },
    "static": {
      "public": {
        ".read": true,
      },
    },
    ".read": "auth.token.admin === true",
    ".write": "auth.token.admin === true"
  }
}