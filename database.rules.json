{
  "rules": {
    ".read": "auth.token.admin === true",
    ".write": "auth.token.admin === true",
    "motd": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "users": {
      "$email": {
        "useronly": {
          ".read": "$email === auth.token.email.toLowerCase().replace('.', '_')",
          ".write": "$email === auth.token.email.toLowerCase().replace('.', '_')"
        },
        "public": {
          ".read": true
        },
        "adminonly": {}
      }
    },
    "games": {
      "default": {
        "currentTurn": {
          "public": {
            ".read": true
          }
        },
        "$email": {
          ".read": "$email === auth.token.email.toLowerCase().replace('.', '_')",
          "navy": {
            "$unitGuid": {
            }
          },
          "fleets": {
            "$fleetGuid": {
            }
          }
        }
      }
    },
    "static": {
      "public": {
        ".read": true
      }
    }
  }
}